####################
# === Pingu DE === #
####################
# DE Name
export XDG_CURRENT_DESKTOP=Pingu
# Downloads folder
export XDG_DOWNLOAD_DIR="/home/iwas/downloads"
# Web Browser
export BROWSER="chromium $(cat /home/iwas/.config/chromium-flags.conf | xargs)"
# Text Editor
export EDITOR=nvim

#######################
# === GL Settings === #
#######################
export CLUTTER_DEFAULT_FPS=144
export __GL_SHADER_DISK_CACHE_SKIP_CLEANUP=1
export __GL_VRR_ALLOWED=1
export __GL_SYNC_DISPLAY_DEVICE=DP-0
export __GL_THREADED_OPTIMIZATIONS=1
# Mesa threaded shader compilation
export multithread_glsl_compiler=1

##########################
# === Other settings === #
##########################
# Fix the Java Problem
export _JAVA_AWT_WM_NONREPARENTING=1

#########################
# === Startup Tasks === #
#########################
# Set maximum open file descriptors
ulimit -n 8192
# NVIDIA GPU Tweaks: Power Limit (175W -> 200W)
sudo nvidia-smi -pl 200
# NVIDIA GPU Tweaks: PowerMizer Performance Mode
nvidia-settings -a "GPUPowerMizerMode=1"
# Audio
gentoo-pipewire-launcher &
# Compositor
/usr/local/bin/picom --experimental-backends &
# Wallpaper
feh --bg-fill /home/iwas/.wallpapers/wallpaper_1.jpg --bg-fill /home/iwas/.wallpapers/wallpaper_2.jpg &
# Clipboard History
clipmenud &
# GNU Emacs daemon
/usr/bin/emacs --daemon &

